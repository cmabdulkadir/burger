<h1>EAT-da-BURGER!</h1>
<div id="burgerImg">
     <img src="https://www.kindpng.com/picc/m/113-1135703_hamburger-fast-food-veggie-burger-cartoon-burger-png.png" alt ="Hamburger">
</div>
<div class="container">
  <div class="row">
    <div class="col" id="colOne">
      <h2>Waiting to be devoured...</h2>
      {{!-- Display All NOT devoured burgers --}}
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger-block devoured=false }}
            {{/unless}}
        {{/each}}
      </ul>
    </div>
  
  <div class="col" id="colTwo">
     <h2>Devoured Burgers</h2>
     <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
  </div>
  </div>
  <div class="add">
  
      
      <form class="create-form">
    <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

