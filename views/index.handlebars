<h1>EAT-da-BURGER!</h1>
<div id="burgerImg">
  <img
    src="https://images.unsplash.com/photo-1571091718767-18b5b1457add?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8YnVyZ2VyfGVufDB8MHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=700&q=60"
    alt="Hamburger">
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col" id="colOne">
      <h2>Waiting to be devoured...</h2>
      {{!-- Display All NOT devoured burgers --}}
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=false }}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col" id="colTwo">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="add">


    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      {{!-- <div class="form-group">
        <label for="devoured">Devoured</label><br>
        <input type="radio" name="devoured" value="0" checked> Devoured!<br>
        <input type="radio" name="devoured" value="1"> Chefin it up...
      </div> --}}


      <button type="submit">Add Burger</button>
    </form>
  </div>